@model EventEaseApp.Models.Event

@{
    ViewData["Title"] = "Edit Event";
}

<h2>Edit Booking</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="EventID" />
    <div class="form-group">
        <label asp-for="EventID" class="control-label"></label>
        <input asp-for="EventID" class="form-control" />
        <span asp-validation-for="EventID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Venue_ID" class="control-label"></label>
        <input asp-for="Venue_ID" class="form-control" />
        <span asp-validation-for="Venue_ID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EventName" class="control-label"></label>
        <input asp-for="EventName" class="form-control" type="date" />
        <span asp-validation-for="EventName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EventDate" class="control-label"></label>
        <input asp-for="EventDate" class="form-control" type="date" />
        <span asp-validation-for="EventDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" type="date" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

