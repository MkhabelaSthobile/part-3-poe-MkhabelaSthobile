@model EventEaseApp.Models.Event

@{
    ViewData["Title"] = "Delete Event";
}

<h2>Delete Event</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">EventID</dt>
        <dd class="col-sm-10">@Model.EventID</dd>
        <dt class="col-sm-2">EventName</dt>
        <dd class="col-sm-10">@Model.EventName</dd>
        <dt class="col-sm-2">EventDate</dt>
        <dd class="col-sm-10">@Model.EventDate</dd>
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="EventID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>



