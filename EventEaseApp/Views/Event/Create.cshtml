@model EventEaseApp.Models.Event

@{
    ViewData["Title"] = "Event";
}

<h2>Create Event</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="form-group">

                <label class="control-label">VenueName</label>
                <select asp-for="Venue_ID" class="form-control" asp-items="ViewBag.VenueList"></select>
                <span asp-validation-for="Venue_ID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EventName" class="control-label"></label>
                <input asp-for="EventName" class="form-control" />
                <span asp-validation-for="EventName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EventDate" class="control-label"></label>
                <input asp-for="EventDate" class="form-control" />
                <span asp-validation-for="EventDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" value="Create" class="btn btn-primary">Save</button>|
                <a asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>
            
<div>
    
</div>
   
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
