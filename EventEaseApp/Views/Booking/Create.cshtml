@model EventEaseApp.Models.Booking

@{
    ViewData["Title"] = "Create";
}

<h2>Create Booking</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label class="control-label">EventName</label>
                <select asp-for="Event_ID" class="form-control" asp-items="ViewBag.EventList"></select>
                <span asp-validation-for="Event_ID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">VenueName</label>
                <select asp-for="Venue_ID" class="form-control" asp-items="ViewBag.VenueList"></select>
                <span asp-validation-for="Venue_ID" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="BookingDate" class="control-label"></label>
                <input asp-for="BookingDate" class="form-control" />
                <span asp-validation-for="BookingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
