@model EventEaseApp.Models.Venue

@{
    ViewData["Title"] = "Delete Venue";
}

<h2>Delete Venue</h2>

<h3>Are you sure you want to delete this venue?</h3>
<div>
    <p><strong>Venue ID:</strong> @Model.VenueID</p>
    <p><strong>Name:</strong> @Model.VenueName</p>
    <p><strong>Location:</strong> @Model.Location</p>
    <p><strong>Capacity:</strong> @Model.Capacity</p>
    <p><strong>Venue Image:</strong> 
        @if (!string.IsNullOrEmpty(Model.ImageURL))
        {
           <img src="@Model.ImageURL" alt="Venue Image" width="200" height="200" style="object-fit:cover; border-radius:8px;"> 
        }
        else
        {
            <span>No Image Available</span>
        }
    </p>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="VenueID" />
    <button type="submit" class="btn btn-danger">Delete</button> |
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
